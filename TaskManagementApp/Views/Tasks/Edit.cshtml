@model TaskManagementApp.Models.Task

<h2 class="text-center mt-5">Editare task</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Tasks",
            method: FormMethod.Post,
            routeValues: new { id = Model.TaskId }))
            {

                @Html.HiddenFor(t => t.ProjectId, new {@Value=@Model.ProjectId})
                @Html.Label("Title", "Titlu Task")
                <br />
                @Html.EditorFor(m => m.TaskTitle, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.TaskTitle, null, new { @class = "text-danger" })
                <br />
                <br />

                @Html.Label("TaskContent", "Continut Task")
                <br />
                @Html.TextArea("TaskContent", null, new { @class = "form-control summernote" })

                @Html.ValidationMessageFor(m => m.TaskContent, null, new { @class = "text-danger" })
                <br />
                <br />

                <label>Selectati statusul</label>
                @Html.DropDownListFor(m => m.StatId,
                    new SelectList(Model.StatsList, "Value", "Text"),
                    "Selectati statusul", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.StatId, null, new { @class = "text-danger" })
                <br />
                <br />
                <div class="text-center">
                    <button class="btn btn-sm btn-success" type="submit">Modifica taskul</button>
                </div>
            }
        </div>
    </div>
</div>
@{
    ViewBag.Title = "Index";
}

<h2 align="center">Afisare echipe</h2>
<br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

@* Motorul de cautare *@
<form method="GET">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Cauta echipe dupa nume" name="search"
               value="@ViewBag.SearchString">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </div>
</form>

@foreach (TaskManagementApp.Models.Team team in ViewBag.Teams)
{
    <div class="card">

        @Html.Partial("TeamInfo", team)

        <a class="btn btn-success" href="/Teams/Show/@team.TeamId">Afisare echipa</a>

    </div>

    <br />
    <br />
}

@* Afisarea paginata a echipelor *@
<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (ViewBag.lastPage > 0)
            {
                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item">
                        <a class="page-link" href="@ViewBag.PaginationBaseUrl=@i">
                            @(
                                i
                                )
                        </a>
                    </li>
                }

                <li class="page-item">
                    <a class="page-link" href="@ViewBag.PaginationBaseUrl=@(ViewBag.lastPage)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <br />
                <div>Nu exista echipe disponibile </div>
            }
        </ul>
    </nav>
</div>